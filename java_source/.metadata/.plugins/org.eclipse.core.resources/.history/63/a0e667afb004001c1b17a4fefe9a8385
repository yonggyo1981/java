package chapter6;

public class Bus {
	int num; // 노선번호
	int passengerCount; // 승객의 수
	int fare; // 버스 요금
	int profit; // 버스가 벌어들인 수입 
	
	public Bus(int num, int fare) {
		this.num = num;
		this.fare = fare;
	}
	
	public void collect(Student s) {
		this.profit += this.fare;
		this.passengerCount++;
		
		s.money -= this.fare;
	}
}
